{% extends '::myBase.html.twig' %}

{% block title %}
    Index page
{% endblock %}

{% block body %}
    <br />
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th class="text-center">Info</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            <tr>
                <td><b>You are logged in as: </b></td>
                <td>{{ user.username }}</td>             
            </tr>
            <tr>
                <td><b>Your role(s): </b></td>
                <td>
                    {% set count = 0 %}
                    {% for role in user.roles %}
                        {{ role }}
                        {% if user.roles|length > 1 and count < user.roles|length-1 %}
                                ,
                        {% endif %}
                        {% set count = count + 1 %}
                    {% endfor %}
                </td>             
            </tr>
            <tr>
                <td><b>Your last login time: </b></td>
                <td>{{ user.lastlogin|date('Y-m-d, H:i:s') }}</td>             
            </tr>
            </tbody>
        </table>
{% endblock %}    